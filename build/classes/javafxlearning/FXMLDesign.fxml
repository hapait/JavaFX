<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="200" prefWidth="320" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="javafxlearning.Controller">
    <VBox>
        <Button layoutX="126" layoutY="90" text="Click Me!" fx:id="button" onAction="#handleButtonAction"/>
        <Label layoutX="126" layoutY="120" minHeight="16" minWidth="69" fx:id="label" text="test label"/>
    
        <Label layoutX="126" layoutY="120" minHeight="16" minWidth="69" fx:id="firstLabel" text="first Label"/>
        <Label layoutX="126" layoutY="120" minHeight="16" minWidth="69" fx:id="secondLabel" text="${firstLabel.text}"/>
    
        <Label text="Difficulty"></Label>
        
        <RadioButton text="Easy" toggleGroup="$toggle"></RadioButton>
        <RadioButton text="Medium" toggleGroup="$toggle"></RadioButton>
        <RadioButton text="Hard" toggleGroup="$toggle"></RadioButton>
    </VBox>
</AnchorPane>
